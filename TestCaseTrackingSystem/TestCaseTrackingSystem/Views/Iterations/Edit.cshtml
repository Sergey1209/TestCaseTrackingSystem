@model TestCaseStorage.Models.Iterations.Iteration

@{
    ViewBag.Title = Model == null ? "Add New Iteration" : "Editing Iteration '" + Model.Name + "'";
}

@using (Html.BeginForm("Save", "Iterations", FormMethod.Post))
{
    @Html.HiddenFor(t => t.ID)
    <div class="row">
        <div class="col-lg-4 col-lg-offset-4 input-group-lg">
            @Html.TextBoxFor(t => t.Name, new { @class = "form-control navbar-btn", placeholder = "Iteration name" })
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-lg-offset-4 input-group-lg">
            @Html.TextBoxFor(t => t.StartDate, new { @class = "form-control navbar-btn", placeholder = "Start Date" })
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-lg-offset-4 input-group-lg">
            @Html.TextBoxFor(t => t.EndDate, new { @class = "form-control navbar-btn", placeholder = "End Date" })
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-lg-offset-4 input-group-lg text-center">
            @if (Model != null)
            {
                @Html.ActionLink("Cancel", "List", null, new { @class = "btn btn-default navbar-btn btn-lg ok-cancel-btn-width" })
            }
            <input class="btn btn-default btn-lg ok-cancel-btn-width" type="submit" value='@(Model != null ? "Update" : "Add")'/>
        </div>
    </div>
}

