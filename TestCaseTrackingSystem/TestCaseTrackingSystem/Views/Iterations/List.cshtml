@using TestCaseStorage.Models.Iterations
@using TestCaseStorage.Models.Shared
@model IEnumerable<IterationViewModel>

@{
    ViewBag.Title = "All Iterations";
}

@section AdminTools
{
    @{
        var disabledAttributes = new
        {
            @class = "btn btn-success btn-md",
            disabled = "true",
            title = "Only users with Admin role can add/edit/delete iterations"
        };
        var activeAttributes = new
        {
            @class = "btn btn-success btn-md"
        };

        var attributes = ViewBag.DisableAdd ? (object)disabledAttributes : (object)activeAttributes;
    }

    @Html.ActionLink("Add", "Add", "Iterations", null, attributes)
}

@if (Model.Any())
{
    <table class="table table-striped table-hover">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th></th>
        </tr>
        @foreach (var iteration in Model)
        {
            var editHtml = ViewBag.DisableAdd ? string.Empty : "onclick=\"location.href = '" + Url.Action("Edit", new { id = iteration.ID }) + "'\"";
            <tr @Html.Raw(editHtml)>
                <td>@iteration.ID</td>
                <td>@iteration.Name</td>
                <td>@iteration.StartDate</td>
                <td>@iteration.EndDate</td>
                <td>
                    @if (!ViewBag.DisableAdd)
                    {
                        @Html.Partial("_editDeleteSection", new EditDeleteSectionModel("Iterations", "Iteration", iteration.ID))
                    }
                </td>
            </tr>
        }
    </table>
}
else
{
    @Html.Partial("_noItemsMessage", "There is no iterations here. Please ask your Admin to create one.")
}


