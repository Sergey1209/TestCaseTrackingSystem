@using TestCaseStorage.Infrastructure.HtmlHelpers
@model TestCaseStorage.Models.BacklogItems.BacklogItemEditModel

@{
    ViewBag.Title = Model == null || Model.ID == 0 ? "Add New Backlog Item" : "Editing Backlog Item '" + Model.Title + "'";
}

@using (Html.BeginForm("Save", "Backlog", FormMethod.Post))
{
    @Html.HiddenFor(t => t.ID)
    @Html.HiddenFor(t => t.UserCreatedId)

    @Html.TextBoxLineFor(t => t.Title, "Title")
    @Html.TextBoxLineFor(t => t.Description, "Description")
    @Html.EnumDropDownLineFor(t => t.Type, "Type")
    @Html.DropDownListLineFor(t => t.IterationId, Model.Iterations, "Iteration")
    @Html.DropDownListLineFor(t => t.AssignedToUserId, Model.Users, "User")
    @Html.DatePickerLineFor(t => t.DateCreated, "End Date")

    <div class="row">
        <div class="col-lg-4 col-lg-offset-4 input-group-lg text-center">
            @if (Model != null)
            {
                @Html.ActionLink("Cancel", "List", null, new { @class = "btn btn-default navbar-btn btn-lg ok-cancel-btn-width" })
            }
            <input class="btn btn-default btn-lg ok-cancel-btn-width" type="submit" value='@(Model == null || Model.ID == 0 ? "Add" : "Update")' />
        </div>
    </div>
}


