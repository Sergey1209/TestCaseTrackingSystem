@using TestCaseStorage.Models.BacklogItems
@using TestCaseStorage.Models.Shared
@model IEnumerable<BacklogItemViewModel>

@{
    ViewBag.Title = "All Backlog Items";
}

@section AdminTools
{
    @Html.ActionLink("Add", "Add", "Backlog", null, new { @class = "btn btn-success btn-md" })
}
 
@if (Model.Any())
{
    <table class="table table-striped table-hover">
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Type</th>
            <th>Iteration</th>
            <th>Assigned To</th>
            <th>User Created</th>
            <th>Date Created</th>
            <th></th>
        </tr>
        @foreach (var backlogItem in Model)
        {
            <tr onclick="location.href='@Url.Action("Edit", new { id = backlogItem.ID })'">
                <td>@backlogItem.ID</td>
                <td>@backlogItem.Title</td>
                <td>@backlogItem.Description</td>
                <td>@backlogItem.Type</td>
                <td>@backlogItem.Iteration</td>
                <td>@backlogItem.AssignedTo</td>
                <td>@backlogItem.UserCreated</td>
                <td>@backlogItem.DateCreated</td>
                <td>
                    @Html.Partial("_editDeleteSection", new EditDeleteSectionModel("Backlog", backlogItem.ID))
                </td>
            </tr>
        }
    </table>
}
else
{
    @Html.Partial("_noItemsMessage", "There is no backlog items here. Please ask your Admin to create one.")
}

