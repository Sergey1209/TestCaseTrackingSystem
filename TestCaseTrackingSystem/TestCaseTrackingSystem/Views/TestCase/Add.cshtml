@using TestCaseStorage.Infrastructure.HtmlHelpers
@model TestCaseStorage.Models.TestCases.TestCaseAddViewModel

@{
    ViewBag.Title = "Добавить Тест Кейс";
}

@using (Html.BeginForm("AddNew", "TestCase", FormMethod.Post))
{
    @Html.TextBoxLineFor(t => t.Title, "Название")
    @Html.TextBoxLineFor(t => t.Description, "Описание")
    @Html.DropDownListLineFor(t => t.BacklogItemID, Model.BacklogItems, "Относиться к")

    <div class="row">
        <div class="col-lg-5 col-lg-offset-4 input-group-lg text-center">
            @if (Model != null)
            {
                @Html.ActionLink("Отмена", "List", null, new { @class = "btn btn-default navbar-btn btn-lg ok-cancel-btn-width" })
            }
            <input class="btn btn-default btn-lg ok-cancel-btn-width" type="submit" value="Добавить" />
        </div>
    </div>
}
