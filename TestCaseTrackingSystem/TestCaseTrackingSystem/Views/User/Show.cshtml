@using TestCaseStorage.Models.Shared
@model TestCaseStorage.Models.Users.UserViewModel

@{
    ViewBag.Title = "Профиль: " + Model.Login;
}

@{
    Html.RenderPartial("_infoLine", new InfoLineModel("Логин", Model.Login));
