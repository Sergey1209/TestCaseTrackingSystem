@using TestCaseStorage.Infrastructure.HtmlHelpers
@model TestCaseStorage.Models.Users.UserViewModel

@{
    ViewBag.Title = "Add New User";
}

@using (Html.BeginForm("AddNew", "User", FormMethod.Post))
{
    @Html.HiddenFor(t => t.ID)
    @Html.HiddenFor(t => t.LastLogin)

    @Html.TextBoxLineFor(t => t.Login, "Login")
    @Html.TextBoxLineFor(t => t.Password, "Password")
    @Html.EnumDropDownLineFor(t => t.Role, "Role")
    @Html.TextBoxLineFor(t => t.Email, "Email")
    @Html.TextBoxLineFor(t => t.FirstName, "First Name")
    @Html.TextBoxLineFor(t => t.LastName, "Last Name")

    <div class="row">
        <div class="col-lg-4 col-lg-offset-4 input-group-lg text-center">
            @if (Model != null)
            {
                @Html.ActionLink("Cancel", "List", null, new { @class = "btn btn-default navbar-btn btn-lg ok-cancel-btn-width" })
            }
            <input class="btn btn-default btn-lg ok-cancel-btn-width" type="submit" value="Add" />
        </div>
    </div>
}

