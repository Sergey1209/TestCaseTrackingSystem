@model IEnumerable<TestCaseStorage.Models.Users.UserViewModel>

@{
    ViewBag.Title = "All Users";
}

@section AdminTools
{
    @Html.ActionLink("Add", "Add", "User", null, new { @class = "btn btn-success btn-md" })
}

@if (Model.Any())
{
    <table class="table table-striped table-hover">
        <tr>
            <th>ID</th>
            <th>Login</th>
            <th>Role</th>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Date Created</th>
            <th>Last Login Date</th>
            <th></th>
        </tr>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.ID</td>
                <td>@user.Login</td>
                <td>@user.Role</td>
                <td>@user.Email</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.DateCreated</td>
                <td>@user.LastLoginDate</td>
                <td>
                    <div class="col-lg-6 text-right">
                        @using (Html.BeginForm("Edit", "User", FormMethod.Get))
                        {
                            @Html.Hidden("id", user.ID)

                            <input class="btn btn-default btn-md" type="submit" value="Edit" />
                        }
                    </div>
                    <div class="col-lg-6">
                        @using (Html.BeginForm("Delete", "User", FormMethod.Post))
                        {
                            @Html.Hidden("id", user.ID)

                            <input class="btn btn-default btn-md" type="submit" value="Delete" />
                        }
                    </div>
                </td>
            </tr>
        }
    </table>
}
else
{
    <div class="row color-main no-items-message text-center">
        There is no users here. Please ask your Admin to create one.
    </div>
}
