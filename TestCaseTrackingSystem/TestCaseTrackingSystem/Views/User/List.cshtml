@using TestCaseStorage.Models.Shared
@model IEnumerable<TestCaseStorage.Models.Users.UserViewModel>

@{
    ViewBag.Title = "All Users";
}

@section AdminTools
{
    @Html.ActionLink("Add", "Add", "User", null, new { @class = "btn btn-success btn-md" })
}

@if (Model.Any())
{
    <table class="table table-striped table-hover">
        <tr>
            <th>ID</th>
            <th>Login</th>
            <th>Role</th>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Date Created</th>
            <th>Last Login Date</th>
            <th></th>
        </tr>
        @foreach (var user in Model)
        {
            <tr onclick="location.href='@Url.Action("Edit", new { id = user.ID })'">
                <td>@user.ID</td>
                <td>@user.Login</td>
                <td>@user.Role</td>
                <td>@user.Email</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.CreatedDate</td>
                <td>@user.LastLogin</td>
                <td>
                    @Html.Partial("_editDeleteSection", new EditDeleteSectionModel("User", user.ID))
                </td>
            </tr>
        }
    </table>
}
else
{
    @Html.Partial("_noItemsMessage", "There is no users here. Please ask your Admin to create one.")
}
