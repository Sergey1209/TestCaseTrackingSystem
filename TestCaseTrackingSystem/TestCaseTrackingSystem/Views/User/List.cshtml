@using TestCaseStorage.Models.Shared
@model IEnumerable<TestCaseStorage.Models.Users.UserViewModel>

@{
    ViewBag.Title = "All Users";
}

@section AdminTools
{
    @{
        var disabledAttributes = new
        {
            @class = "btn btn-success btn-md",
            disabled = "true",
            title = "Only users with Admin role can add/edit/delete iterations"
        };
        var activeAttributes = new
        {
            @class = "btn btn-success btn-md"
        };

        var attributes = ViewBag.DisableAdd ? (object)disabledAttributes : (object)activeAttributes;
    }

    @Html.ActionLink("Add", "Add", "User", null, attributes)
}

@if (Model.Any())
{
    <table class="table table-striped table-hover">
        <tr>
            <th>ID</th>
            <th>Login</th>
            <th>Role</th>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Date Created</th>
            <th>Last Login Date</th>
            <th></th>
        </tr>
        @foreach (var user in Model)
        {
            var editHtml = ViewBag.DisableAdd ? string.Empty : "onclick=\"location.href = '" + Url.Action("Edit", new { id = user.ID }) + "'\"";
            <tr @Html.Raw(editHtml)>
                <td>@user.ID</td>
                <td>@user.Login</td>
                <td>@user.Role</td>
                <td>@user.Email</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.CreatedDate</td>
                <td>@user.LastLogin</td>
                <td>
                    @if (!ViewBag.DisableAdd)
                    {
                        @Html.Partial("_editDeleteSection", new EditDeleteSectionModel("User", user.ID))
                    }
                </td>
            </tr>
        }
    </table>
}
else
{
    @Html.Partial("_noItemsMessage", "There is no users here. Please ask your Admin to create one.")
}
