@model TestCaseStorage.Models.Users.UserViewModel

@{
    ViewBag.Title = Model != null ? "Editing User '" + Model.Login + "'" : "Add New User";
}

@using (Html.BeginForm("Save", "User", FormMethod.Post))
{
    @Html.HiddenFor(t => t.ID)
    <div class="row">
        <div class="col-lg-4 col-lg-offset-4 input-group-lg">
            @Html.TextBoxFor(t => t.Login, new { @class = "form-control navbar-btn", placeholder = "Login" })
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-lg-offset-4 input-group-lg">
            @Html.PasswordFor(t => t.Password, new { @class = "form-control navbar-btn", placeholder = "Password" })
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-lg-offset-4 input-group-lg">
            @Html.EnumDropDownListFor(t => t.Role, new { @class = "form-control navbar-btn", placeholder = "Role" })
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-lg-offset-4 input-group-lg">
            @Html.TextBoxFor(t => t.Email, new { @class = "form-control navbar-btn", placeholder = "Email" })
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-lg-offset-4 input-group-lg">
            @Html.TextBoxFor(t => t.FirstName, new { @class = "form-control navbar-btn", placeholder = "First Name" })
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-lg-offset-4 input-group-lg">
            @Html.TextBoxFor(t => t.LastName, new { @class = "form-control navbar-btn", placeholder = "Last Name" })
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-lg-offset-4 input-group-lg text-center">
            @if (Model != null)
            {
                @Html.ActionLink("Cancel", "List", null, new { @class = "btn btn-default navbar-btn btn-lg ok-cancel-btn-width" })
            }
            <input class="btn btn-default btn-lg ok-cancel-btn-width" type="submit" value='@(Model != null ? "Update" : "Add")' />
        </div>
    </div>
}

