@using DataAccess.Entities
@using TestCaseStorage.Infrastructure.HtmlHelpers
@model TestCaseStorage.Models.Users.UserViewModel

@{
    ViewBag.Title = "Редактирование пользователя - " + Model.Login;
}

@using (Html.BeginForm("Update", "User", FormMethod.Post))
{
    @Html.HiddenFor(t => t.ID)
    @Html.HiddenFor(t => t.LastLogin)
    @Html.HiddenFor(t => t.Password)

    @Html.TextBoxLineFor(t => t.Login, "Логин")
    @Html.EnumDropDownLineFor(t => t.Role, "Роль", excludeItem: t => UserRole.Admin)
    @Html.EnumDropDownLineFor(t => t.Position, "Позиция")
    @Html.TextBoxLineFor(t => t.Email, "Почта")
    @Html.TextBoxLineFor(t => t.Skype, "Скайп")
    @Html.TextBoxLineFor(t => t.FirstName, "Имя")
    @Html.TextBoxLineFor(t => t.LastName, "Фамилия")

    <div class="row">
        <div class="col-lg-5 col-lg-offset-4 input-group-lg text-center">
            @if (Model != null)
            {
                @Html.ActionLink("Отмена", "List", null, new { @class = "btn btn-default navbar-btn btn-lg ok-cancel-btn-width" })
            }
            <input class="btn btn-default btn-lg ok-cancel-btn-width" type="submit" value="Обновить" />
        </div>
    </div>
}

