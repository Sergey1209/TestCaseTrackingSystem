@using TestCaseStorage.Infrastructure.HtmlHelpers
@model TestCaseStorage.Models.Login.RegisterViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Регистрация";
}

@using (Html.BeginForm())
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3 col-lg-offset-5 input-validation-error">
                @if (Model?.ErrorMessages != null)
                {
                    <ul>
                        @foreach (var modelErrorMessage in Model.ErrorMessages)
                        {
                            <li class="message-error">
                                @modelErrorMessage
                            </li>
                        }
                    </ul>
                }
            </div>
        </div>

        @Html.TextBoxLineFor(t => t.Login, "Логин")
        @Html.TextBoxLineFor(t => t.Password, "Пароль")
        @Html.TextBoxLineFor(t => t.ConfirmPassword, "Повтор пароля")
        @Html.TextBoxLineFor(t => t.Email, "Почта")
        @Html.TextBoxLineFor(t => t.Skype, "Скайп")
        @Html.EnumDropDownLineFor(t => t.Role, "Роль")
        @Html.EnumDropDownLineFor(t => t.Position, "Позиция")
        @Html.TextBoxLineFor(t => t.FirstName, "Имя")
        @Html.TextBoxLineFor(t => t.LastName, "Фамилия")

        <div class="row">
            <div class="col-lg-5 col-lg-offset-4 input-group-lg text-center">
                @Html.ActionLink("Отмена", "Login", null, new {@class = "btn btn-default navbar-btn btn-lg ok-cancel-btn-width"})
                <input class="btn btn-default navbar-btn btn-lg" type="submit" value="Зарегистрировать"/>
            </div>
        </div>
    </div>
}